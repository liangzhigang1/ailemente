{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true // 可以在全局使用node语法
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-essential"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "semi": ["warn","never"] // 强制要求 JavaScript 的行尾不写分号
    }
}
